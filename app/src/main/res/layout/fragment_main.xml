<android.support.v7.widget.GridLayout
    android:id="@+id/device_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:columnCount="10"
    app:layout_gravity="center_horizontal"
    app:orientation="horizontal"
    app:rowCount="13"
    app:useDefaultMargins="false"
    tools:context=".MainActivity$PlaceholderFragment">

    <android.support.v7.widget.Space
        android:id="@+id/topLeftSeparator"
        android:layout_height="20dp"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_row="0"/>

    <android.support.v7.widget.Space
        android:id="@+id/leftVerticalSeparator"
        android:layout_width="30dp"
        app:layout_column="3"
        app:layout_gravity="fill_vertical"
        app:layout_row="0"
        app:layout_rowSpan="13"/>

    <!--<ImageView-->
    <!--android:id="@+id/topCenter"-->
    <!--android:src="@android:drawable/sym_def_app_icon"-->
    <!--app:layout_column="4"-->
    <!--app:layout_row="0"-->
    <!--app:layout_columnSpan="2"-->
    <!--app:layout_gravity="center_horizontal|top"-->
    <!--app:layout_rowSpan="3"/>-->

    <android.support.v7.widget.Space
        android:id="@+id/rightVerticalSeparator"
        android:layout_width="30dp"
        app:layout_column="6"
        app:layout_gravity="fill_vertical"
        app:layout_row="0"
        app:layout_rowSpan="13"/>

    <android.support.v7.widget.Space
        android:id="@+id/topRightSeparator"
        android:layout_height="20dp"
        app:layout_column="7"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_row="0"/>


    <ImageView
        android:id="@+id/topLeft"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_gravity="center"
        app:layout_row="1"
        app:layout_rowSpan="2"/>

    <ImageView
        android:id="@+id/topRight"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_column="7"
        app:layout_columnSpan="3"
        app:layout_gravity="center"
        app:layout_row="1"
        app:layout_rowSpan="2"/>

    <android.support.v7.widget.Space
        android:id="@+id/middleSeparator"
        android:layout_height="20dp"
        app:layout_column="0"
        app:layout_columnSpan="10"
        app:layout_gravity="fill_horizontal"
        app:layout_row="3"/>

    <android.support.v7.widget.Space
        android:id="@+id/bottomLeftSeparator"
        android:layout_height="20dp"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_row="4"/>


    <ImageView
        android:id="@+id/bottomCenter"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_column="4"
        app:layout_columnSpan="2"
        app:layout_gravity="center_horizontal|top"
        app:layout_row="4"
        app:layout_rowSpan="3"/>

    <android.support.v7.widget.Space
        android:id="@+id/bottomRightSeparator"
        android:layout_height="20dp"
        app:layout_column="7"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        app:layout_row="4"/>

    <ImageView
        android:id="@+id/bottomLeft"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_column="0"
        app:layout_columnSpan="3"
        app:layout_gravity="right"
        app:layout_row="5"
        app:layout_rowSpan="2"/>

    <ImageView
        android:id="@+id/bottomRight"
        android:src="@android:drawable/sym_def_app_icon"
        app:layout_column="7"
        app:layout_columnSpan="3"
        app:layout_gravity="bottom|left"
        app:layout_row="5"
        app:layout_rowSpan="2"/>

</android.support.v7.widget.GridLayout>